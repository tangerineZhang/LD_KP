                            <i class="material-icons col-blue">domain</i>
                            <label for="password">项目关联</label>
                            for (int i = 0; i < dtProject.Rows.Count; i++)
                            {
                                if (i % 2 == 0)
                                {
                                    <div class="header bg-deep-orange">
                                        <h2>
                                            @dtProject.Rows[i]["pname"] <small>@dtProject.Rows[i]["address"] </small>
                                        </h2>
                                    </div>
                                }
                                else
                                {
                                    <div class="header">
                                        <h2>
                                            @dtProject.Rows[i]["pname"] <small>@dtProject.Rows[i]["address"] </small>
                                        </h2>
                                    </div>
                                }
