        function CustomerSubmit_onclick() {
            //获取控件值
            var IsPromise = $("#IsPromise option:selected").text();
            var Supplier = $("#Supplier").val();
            var CName = $("#CName").val();
            var Telephone = $("#Telephone").val();

            var IDNumber = $("#IDNumber").val();
            var Temperature = $("#Temperature").val();
            var IsPass = $("#IsPass option:selected").text();
            var IsContact = $("#IsContact option:selected").text();

            var IsCoincidence = $("#IsCoincidence option:selected").text();
            var IsSeeDoctor = $("#IsSeeDoctor option:selected").text();
            var Isolated = $("#Isolated option:selected").text();
            var IsInform = $("#IsInform option:selected").text();

            var CurrentAddress = $("#CurrentAddress").val();
            var VisitAddress = $("#VisitAddress").val();
            var Oexplain = $("#Oexplain").val();

            //必填项验证
            if (IsPromise == "请选择..." || Supplier == "" || CName == "" || Telephone == ""
                || IDNumber == "" || Temperature == "" || IsPass == "请选择..." || IsContact == "请选择..."
                || IsCoincidence == "请选择..." || IsSeeDoctor == "请选择..." || Isolated == "请选择..." || IsInform == "请选择..."
                || CurrentAddress == "" || Oexplain ==""
                      ) {
                alert("请填写必填项！");
                return;
            }

            //“联系电话”格式验证
            if (isPhoneNo(Telephone) == false) {
                alert("请填写正确的“联系电话”！");
                return;
            }
            //“身份证”格式验证
            if (isCardNo(IDNumber) == false) {
                alert("请填写正确的“身份证”！");
                return;
            }

            //“当日体温”格式验证
            if ($.isNumeric(Temperature) == false) {
                alert("请填写正确的“当日体温”！");
                return;
            }

            //提交
            $.post("/YQ/AddCustomer", {
                IsPromise: IsPromise,
                Supplier: Supplier,
                CName: CName,
                Telephone: Telephone,
                IDNumber: IDNumber,
                Temperature:Temperature,
                IsPass: IsPass,
                IsContact: IsContact,
                IsCoincidence: IsCoincidence,
                IsSeeDoctor:IsSeeDoctor,
                Isolated: Isolated,
                IsInform: IsInform,
                CurrentAddress: CurrentAddress,
                VisitAddress: VisitAddress,
                Oexplain: Oexplain
            }, function (response) {
                alert(response);
                if (response == '提交成功！') {
                    window.location.reload();
                }
            });

        }

        //验证日期格式
        function isDate(dateString) {
            if (dateString.trim() == "") {
                alert("请输入日期");
                return false;
            }
            var r = dateString.match(/^(\d{1,4})(-|\/)(\d{1,2})\2(\d{1,2})$/);
            if (r == null) {
                alert("请输入格式正确的日期\n\r日期格式：yyyy-mm-dd\n\r例    如：2020-01-01\n\r");
                return false;
            }
            var d = new Date(r[1], r[3] - 1, r[4]);
            var num = (d.getFullYear() == r[1] && (d.getMonth() + 1) == r[3] && d.getDate() == r[4]);
            if (num == 0) {
                alert("请输入格式正确的日期\n\r日期格式：yyyy-mm-dd\n\r例    如：2020-01-01\n\r");
            }
            return (num != 0);
        }

        // 验证手机号
        function isPhoneNo(phone) {
            var pattern = /^1[34578]\d{9}$/;
            return pattern.test(phone);
        }

        // 验证身份证
        function isCardNo(card) {
            var pattern = /(^\d{15}$)|(^\d{18}$)|(^\d{17}(\d|X|x)$)/;
            return pattern.test(card);
        }
    </script>



